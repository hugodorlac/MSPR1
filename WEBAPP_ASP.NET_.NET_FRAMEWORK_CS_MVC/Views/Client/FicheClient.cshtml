@model WEBAPP_ASP.NET_.NET_FRAMEWORK_CS_MVC.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section link_style
{
    <link href="../../Styles/StyleSheet2.css" rel="stylesheet" />
}

<div class="container">
    <div class="container-fluid">
        <h1 class="text-center font p-2" style="margin:auto;">Fiche Client</h1>

    </div>
    <form class="mb-3">

        <div class="card p-3" style=" margin: 20px 10px;">
            <h4 class="ml-3">Coordonnées principales</h4>
            <div class="card-body" style="display: flex; ">
                <div style="width: 50%;">
                    <div class="form-group" style="margin: 20px 10px;">
                        <label for="codeClient">Code Client</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="codeClient" placeholder="">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Search</button>
                        </div>
                    </div>
                </div>
                <div style="width: 50%;">
                    <div class="form-group" style="margin: 20px 10px;">
                        <label for="raisonSociale">Raison Sociale</label>
                        <input type="text" class="form-control" id="raisonSociale" placeholder="">
                    </div>
                </div>
            </div>

        </div>
        <div class="card" style="margin: 20px 10px;">

            <div class="card-body" style="display: flex;">

                <div style="width: 50%;">
                    <h4 style="margin: 46px 10px;">Adresse principale</h4>
                    <div class="form-group" style="margin: 20px 10px;">
                        <label for="adresse1">Adresse 1</label>
                        <input type="text" class="form-control" id="adresse1" placeholder="">
                    </div>
                    <div class="form-group" style="margin: 20px 10px;">
                        <label for="adresse2">Adresse 2</label>
                        <input type="text" class="form-control" id="adresse2" placeholder="">
                    </div>
                    <div class="form-group" style="margin: 20px 10px;">
                        <label for="adresse3">Adresse 3</label>
                        <input type="text" class="form-control" id="adresse3" placeholder="">
                    </div>


                    <div class="form-group" style="margin: 20px 10px;">
                        <label class="form-label">Code Postale</label>
                        <div class="input-group">
                            <input id="codePostale"
                                   type="text"
                                   class="form-control"
                                   placeholder="" />
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="width: 50%;">
                    <div class="form-group" style="margin: 20px 10px;">
                        <label class="form-label">Ville</label>
                        <div class="input-group">
                            <input id="ville"
                                   type="text"
                                   class="form-control"
                                   placeholder="" />
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin: 20px 10px;">
                        <label class="form-label">Pays</label>
                        <div class="input-group">
                            <input id="pays"
                                   type="text"
                                   class="form-control"
                                   placeholder="" />
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>



                    <div class="form-group" style="margin: 20px 10px;">
                        <label class="form-label">Téléphone</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                                        <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                    </svg>
                                </span>
                            </div>
                            <input id="tel"
                                   type="text"
                                   class="form-control"
                                   placeholder="" />
                        </div>
                    </div>

                    <div class="form-group" style="margin: 20px 10px;">
                        <label for="fax">Fax</label>
                        <input type="number" class="form-control" id="fax" placeholder="">
                    </div>

                    <div class="form-group" style="margin: 20px 10px;">
                        <label class="form-label">E-mail</label>
                        <div class="input-group">
                            <input id="codePostale"
                                   type="text"
                                   class="form-control"
                                   placeholder="" />
                            <div class="input-group-prepend">
                                <span class="input-group-text">&#64;</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="display: flex;">
            <div class="card " style="width: 50%;  margin: 20px 10px;">
                <div class="card-body">
                    <h4>TVA</h4>
                    <div class="form-group">
                        <label for="numTVA">N° de TVA intracommunautaire</label>
                        <input type="text" class="form-control" id="numTVA" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="regimeTVA">Régime TVA</label>
                        <select class="form-control">
                            <option>Soumis à TVA en France Métropolitaine</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card " style="width: 50%;  margin: 20px 10px;">
                <div class="card-body">
                    <h4>Comptabilité</h4>
                    <div class="form-group">
                        <label for="numCompta">N° de compte comptable</label>
                        <input type="text" class="form-control" id="numCompta" placeholder="">
                    </div>
                </div>
            </div>

            <div class="card " style="width: 50%;  margin: 20px 10px;">
                <div class="card-body">
                    <h4>Autres informations</h4>
                    <div class="form-group">
                        <label for="statut">Statut</label>
                        <input type="text" class="form-control" id="statut" placeholder="Rien à signaler">
                    </div>
                    <div class="form-group">
                        <label for="famille">Famille</label>
                        <select class="form-control">
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="famille">Code APE</label>
                        <select class="form-control">
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="siret">N° de Siret</label>
                        <input type="text" class="form-control" id="siret" placeholder="Rien à signaler">
                    </div>
                    <div class="form-group">
                        <label for="siret">Adresse web</label>
                        <input type="text" class="form-control" id="siret" placeholder="Rien à signaler">
                    </div>
                </div>
            </div>
        </div>

        <button class="mx-3 btn btn-primary">Supprimer</button>
        <button class="mx-3 btn btn-primary">Modifier</button>
    </form>


    <div class="card p-3" style=" margin: 20px 10px;">
        <div>
            <h4>Gestion des contacts et autres adresses chez le client</h4>
        </div>

        <div class="card-body" style="display: flex; ">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Civilité</th>
                        <th scope="col">Fonction</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Adresse e-mail</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Tél. mobile</th>
                        <th scope="col">Fax</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section script
{

}
